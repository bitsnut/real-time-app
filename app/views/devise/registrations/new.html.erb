<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #eee;
    }
</style>
<div class="container">
  <% logger.debug "#{resource.errors.inspect}" %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup" }) do |f| %>
      <h2 class="form-signup-heading">Sign Up</h2>
      <%= f.error_notification %>
      <%= f.input :email, required: true, autofocus: true, label: false, wrapper: false, input_html: { class: "form-control email" }, placeholder: "Email address" %>
      <%= f.input :password, required: true, label: false, wrapper: false, input_html: { class: "form-control password" }, placeholder: "Password" %>
      <%= f.input :password_confirmation, required: true, label: false, wrapper: false, input_html: { class: "form-control password_confirmation" }, placeholder: "Password confirmation" %>
      <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
