<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #eee;
    }
</style>
<div class="container">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
      <h2 class="form-signin-heading">Sign in</h2>
      <%= f.input :email, required: true, autofocus: true, label: false, wrapper: false, input_html: { class: "form-control email" }, placeholder: "Email address" %>
      <%= f.input :password, required: true, label: false, wrapper: false, input_html: { class: "form-control password" }, placeholder: "Password" %>
      <div class="wrapper_remember_me">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <%= f.button :submit, "Sign in", class: "btn btn-lg btn-success btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
