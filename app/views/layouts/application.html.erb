<!DOCTYPE html>
<html>
<head>
  <title>RealTimeApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header" class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Real-time App", root_path, class: "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "Posts", posts_url %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">User <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% unless user_signed_in? %>
                <li><%= link_to "Login", new_user_session_path %></li>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
            <% else %>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                <li><%= link_to "Edit profile", edit_user_registration_path %></li>
            <% end %>
            <li class="divider"></li>
            <li class="dropdown-header">Other options</li>
            <li><% if user_signed_in? %><%= link_to "Notifications", activities_path %><% end %></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>

      <div class="pull-right right_section">
        <% if user_signed_in? %><p>Logged in as <strong><%= current_user.email %></strong></p><% end %>
      </div>
    </div><!--/.navbar-collapse -->
  </div>
</div>
<%= yield %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
